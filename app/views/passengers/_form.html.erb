<% if @passenger.errors.any? %>
  <p><strong>There was an error in saving this passenger: </strong></p>
  <ul><% @passenger.errors.each do |column, message| %>
    <li><%= column.capitalize %> <%= message%>.</li>
  <% end %></ul>
<% end %>

<div class="form">
  <%= form_with model: @passenger do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <div>
    <%= f.label :phone_num, "Phone Number"%>
    <%= f.text_field :phone_num %>
  </div>
    <%= f.submit action_name, class: "button" %>
  <% end %>
</div>